#include "Epaper.hpp"

#include "wiringPi.h"
#include <errno.h>

Epaper::Epaper() {
	mChannel = 0;
	mRunning = true;
	if (wiringPiSPISetup (mChannel, 8000000) < 0) {
		fprintf(stderr, "SPI Setup failed: %s\n", strerror (errno));
		mRunning = false;
	}
	wiringPiSetup();
}

Epaper::~Epaper() {

}
